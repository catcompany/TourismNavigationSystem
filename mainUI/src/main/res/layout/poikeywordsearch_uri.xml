<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poi_keyword_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/poi_keyword_uri_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/poi_keyword_uri_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/poi_keyword_uri_title"
        app:layout_constraintTop_toBottomOf="@id/poi_keyword_uri_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/poi_keyword_uri_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_here"
        app:layout_constraintStart_toStartOf="@id/poi_keyword_uri_title"
        app:layout_constraintTop_toBottomOf="@id/poi_keyword_uri_snippet" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/poi_keyword_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/more_information"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/poi_keyword_uri_go"
        app:layout_constraintTop_toBottomOf="@id/poi_keyword_uri_snippet" />


</androidx.constraintlayout.widget.ConstraintLayout>