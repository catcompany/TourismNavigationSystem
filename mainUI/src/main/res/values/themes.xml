<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TourismNavigationSystem" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@color/bbs_header</item>
        <item name="colorPrimaryVariant">@color/bbs_header</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- 自定义. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TourismNavigationSystem.NoActionBar" parent="Theme.TourismNavigationSystem">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationActivity" parent="Theme.AppCompat">
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.TourismNavigationSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TourismNavigationSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextContent" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>